{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "@public/*": [
        "public/*"
      ],
      "@/*": [
        "src/*"
      ],
      "@main/*": [
        "src/main/*"
      ],
      "@preload/*": [
        "src/preload/*"
      ],
      "@renderer/*": [
        "src/renderer/*"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@tests/*": [
        "tests/*"
      ]
    },
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "target": "ES2020",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}